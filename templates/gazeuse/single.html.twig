{% extends 'base.html.twig' %}

{% block title %}{{gazeuse.nom}}{% endblock %}

{% block body %}
<h1 class="text-center text-danger">{{gazeuse.nom}}</h1>

<div class="container">

  <div class="card mb-3">
    <img src="{{asset('uploads/photo/' ~ gazeuse.photo)}}" class="card-img-top"/>

    <div class="card-body">
      <h5 class="card-title text-center">Superficie : {{gazeuse.superficie}}</h5>
      <h3 class="text-center">Description</h3>
      <p class="card-text">{{gazeuse.description}}</p>
    </div>
  </div>
{% endblock %}